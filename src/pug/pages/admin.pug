extends ../templates/base

block title
    title Admin Panel Brunella

block css    
    link(rel="stylesheet", href="../css/detail_admin.css")

block footer-content

block content 
    .header-options
        .search
            i.icon-search.fa.fa-search
            input.input-search(placeholder="buscar publicación...")
        button.add-publication#add-publication
              i.fa.fa-plus
    .body-publications
        form.add-publication#publication 
            .row-title
                p.title Subir publicación
            .row-body-publication
                textarea.text-field(placeholder="ingresar un titulo para la publicación",rows="3")
                textarea.text-field(placeholder="ingresar la descripción de la publicación",rows="6")
                .input-picture
                    label.text-upload-file 
                        i.icon-upload.fa.fa-image 
                        | subir una foto
                        input(type="file")
                input.btn-publication(type="submit",value="publicar")
        .row-title
            p.title Mis publicaciones
        .row-publications
            - for(var i = 0 ; i < 10 ; i++)
             .card-published
                .options-card
                    .container-image 
                        img(src="https://cdn.pixabay.com/photo/2015/07/09/00/29/woman-837156_960_720.jpg",alt="image")
                    .container-details
                        p.dark Lorem ipsum dolor sit amet consectetur
                        p.date publicado el 27/12/2019
                        .container-options
                            button.delete eliminar
append js
    script(src="../js/admin.js")